<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdvancedCalcActivity">


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_buttons"
        android:layout_width="390dp"
        android:layout_height="431dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_point_adv"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/point"
            android:textSize="45sp"
            app:layout_column="0"
            app:layout_row="6" />

        <Button
            android:id="@+id/btn_numberOne_adv"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:onClick="btn_number1"
            android:text="@string/numberOne"
            android:textSize="45sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn_numberTwo_adv"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/numberTwo"
            android:textSize="45sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn_numberThree_adv"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/numberThree"
            android:textSize="45sp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn_subtraction_adv"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@color/colorAccent"
            android:text="@string/less"
            android:textSize="45sp"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn_numberFour_adv"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/numberFour"
            android:textSize="45sp"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/btn_numberFive_adv"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/numberFive"
            android:textSize="45sp"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/btn_numberSix_adv"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/numberSix"
            android:textSize="45sp"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/btn_division_adv"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@color/colorAccent"
            android:text="@string/division"
            android:textSize="45sp"
            app:layout_column="3"
            app:layout_row="4" />

        <Button
            android:id="@+id/btn_numberSeven_adv"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/numberSeven"
            android:textSize="45sp"
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:id="@+id/btn_numberEight_adv"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/numberEight"
            android:textSize="45sp"
            app:layout_column="1"
            app:layout_row="5" />

        <Button
            android:id="@+id/btn_numberNine_adv"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/numberNine"
            android:textSize="45sp"
            app:layout_column="2"
            app:layout_row="5" />

        <Button
            android:id="@+id/btn_Pi"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/PI"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn_exponent"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/exponent"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn_cos"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/cos"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn_sin"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/sin"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn_multiplication_adv"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@color/colorAccent"
            android:text="@string/multiplication"
            android:textSize="45sp"
            app:layout_column="3"
            app:layout_row="5" />

        <Button
            android:id="@+id/btn_equals_adv"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/cardview_light_background"
            android:text="@string/equals"
            android:textSize="45sp"
            app:layout_column="2"
            app:layout_row="6" />

        <Button
            android:id="@+id/btn_addition_adv"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@color/colorAccent"
            android:text="@string/plus"
            android:textSize="45sp"
            app:layout_column="3"
            app:layout_row="6" />

        <Button
            android:id="@+id/btn_numberZero_adv"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/numberZero"
            android:textSize="45sp"
            app:layout_column="1"
            app:layout_row="6" />

        <Button
            android:id="@+id/btn_erase_adv"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/erase"
            android:textSize="45sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn_eraseAll_adv"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/eraseAll"
            android:textSize="45sp"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn_parenthesisClose_adv"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/parenthesisClose"
            android:textSize="45sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn_parenthesisOpen_adv"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:text="@string/parenthesisOpen"
            android:textSize="45sp"
            app:layout_column="0"
            app:layout_row="2" />

    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="387dp"
        android:layout_height="152dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/grid_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.777">

        <TextView
            android:id="@+id/label_values_adv"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:gravity="end"
            android:text="@string/nullValue"
            android:textAlignment="textEnd"
            android:textColor="@color/colorWhite"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/label_result_adv"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:gravity="end"
            android:text="@string/nullValue"
            android:textAlignment="textEnd"
            android:textColor="@color/colorWhite"
            android:textSize="30sp" />
    </LinearLayout>

    <Switch
        android:id="@+id/switch_mode_adv"
        android:layout_width="103dp"
        android:layout_height="28dp"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="8dp"
        android:checked="true"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="@string/modeAdvanced"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textOff="@string/modeAdvanced"
        android:textOn="@string/modeBasic"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>